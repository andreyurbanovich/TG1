# -*- coding: utf-8 -*-



import pandas as pd
import numpy as np

xl = pd.ExcelFile('file://localhost/reliance games/reliance_from_thinkgaming.xls')

countries = []
games = []
platforms_rev = ['IPHONE REVENUE','IPAD REVENUE','GOOGLE PLAY REVENUE']
platforms_ins = ['IPHONE INSTALLS','IPAD INSTALLS','GOOGLE PLAY INSTALLS']

#loop for getting countries and variables
for sheetname in xl.sheet_names:
    cursheet = pd.read_excel(xl,sheetname,header = 0,index_col = 0)
    games.append(sheetname)
    countries= countries + list(cursheet.index.values)
    variables = cursheet.columns.values
    
#get unique countries list
fcountries = []   
for x in countries:
    fcountries.append(x)
countries = set(fcountries)    
print(countries)
print(variables)    

#create summary frames
rev_game_country = pd.DataFrame(index=countries, columns=games)
inst_game_country = pd.DataFrame(index=countries, columns=games)
rev_game_platform = pd.DataFrame(index=countries, columns=platforms_rev)
inst_game_platform = pd.DataFrame(index=countries, columns=platforms_ins)    

for sheetname in xl.sheet_names:
    cursheet = pd.read_excel(xl,sheetname,header = 0,index_col = 0)
    games.append(sheetname)
    
    #clean and return to int or float
    cursheet.applymap(str)
    cursheet = cursheet.applymap(lambda x: str(x).replace('$',''))
    cursheet = cursheet.applymap(lambda x: str(x).replace('/%',''))  
    cursheet = cursheet.applymap(lambda x: str(x).replace(',',''))
    cursheet = cursheet.applymap(lambda x: str(x).replace('-','0'))                         
    cursheet.applymap(int)
    
    for col in cursheet.iteritems:
        coln = cursheet.column[row]
        val = cursheet.sum[coln]
            if 'INSTALLS' in coln:
                inst_game_platform.set_value(sheetname,coln,val)
                #insert to installs df
            else: 
                rev_game_platform.set_value(sheetname,coln,val)
    
    for row in cursheet.iterrows:
        rown = cursheet.index[row]
        valinst = cursheet.iloc[rown,2] + cursheet.iloc[rown,4] + 
        cursheet.iloc[rown,6]
        valrev = cursheet.iloc[rown,1] + cursheet.iloc[rown,3] + 
        cursheet.iloc[rown,5]
        rev_game_country.set_value(sheetname,rown,valrev)  
        inst_game_country.set_value(sheetname,rown,valinst)

rev_game_country.to_csv(rev_game_country)
inst_game_country(inst_game_country)
rev_game_platform(rev_game_platform)
inst_game_platform(inst_game_platform)
                
